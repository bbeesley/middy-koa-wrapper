{
  "extends": "@beesley/tsconfig/npm.json",
  "compilerOptions": {
    "types": ["node"],
    "declarationDir": "dist/types",
    "outDir": "dist/esm",
    "exactOptionalPropertyTypes": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/*.ts", "src/**/*.ts", "*.d.ts"],
  "exclude": ["**/__mocks__/*", "src/**/*.test.*", "node_modules/*"]
}
